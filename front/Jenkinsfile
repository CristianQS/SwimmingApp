pipeline {
  agent {
    docker {
      image 'node:10-alpine'
      args '-p 8081:8081'
    }
  }
  environment {
    HOME = '.'
  }
  stages {
    stage ('Install Dependecies') {
      steps {
        dir ("front/") {
          sh 'npm install'
        }
      }
    }
    stage ('Test') {
      steps {
        dir ("front/") {
          sh 'npm run test:unit'
        }
      }
    }
    stage ('Build') {
      steps {
        dir ("front/") {
          sh 'npm run build'
        }
      }
    }
    stage ('Deploy') {
      steps {
        dir ("front/") {
          sh 'chmod +x ./scripts/deploy.sh'
          sh './scripts/deploy.sh'
        }
      }
    }
  }
}