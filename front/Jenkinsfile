pipeline {
  agent {
    docker {
      image 'node:10-alpine'
    }
  }
  environment {
    HOME = '.'
  }
  stages {
    stage ('Build') {
      steps {
        dir ("front/") {
          sh 'npm install'
        }
      }
    }
    stage ('Test') {
      steps {
        dir ("front/") {
          sh 'npm run test:unit'
        }
      }
    }
    stage ('Deploy') {
      steps {
        dir ("front/") {
          sh 'npm run serve'
        }
      }
    }
  }
}