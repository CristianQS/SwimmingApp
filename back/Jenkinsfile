pipeline {
  agent any
  environment {
    CI = 'true'
    HOME = '.'
  }
  stages {
    stage ('Create virtual enviroment') {
      steps {
        dir ("back/") {
          sh 'virtualenv env'
          sh 'source env/bin/activate'
        }
      }
    }
    stage ('Install Dependecies') {
      steps {
        dir ("back/") {
          sh 'pip install -r requirements.txt'
        }
      }
    }
    stage ('Test') {
      steps {
        dir ("back/") {
          sh 'python manage.py test'
        }
      }
    }
    stage ('Deploy') {
      steps {
        dir ("back/") {
          sh 'python manage.py runserver'
        }
      }
    }
  }
}